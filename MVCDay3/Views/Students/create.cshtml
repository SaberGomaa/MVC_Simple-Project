
@{
    ViewBag.title = "create";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<form method="post">
    <table class="form-table">
        <tr>
            <td>Name</td>
            <td><input type="text" name="Name" /></td>
        </tr>
        <tr>
            <td>Age</td>
            <td><input type="text" name="Age" /></td>
        </tr>
        <tr>
            <td>Address</td>
            <td><input type="text" name="Address" /></td>
        </tr>
        <tr>
            <td>DepartmentID</td>
            <td>
                <select name="DeptId">
                    @{ 
                        foreach(var i in (List<MVCDay3.Models.Department>)ViewBag.dpts)
                        {
                            <option value="@i.DeptId">@i.Name</option>
                        }
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td></td>
            <td><button type="submit">Add</button></td>
        </tr>
    </table>
    
</form>
