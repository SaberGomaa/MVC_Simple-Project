@model List<MVCDay3.Models.Student>
@{
    ViewBag.title = "Search Result";
    Layout = "~/Views/Shared/_layout.cshtml";
}


@if (Model.Count == 0) { 
    <h1 style="color:black;text-align:center;margin:50px">NO Result</h1>
}

else{ 
<table class="table table-active">
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Address</th>
        <th>Department</th>

    </tr>
    @{
        foreach (var i in Model)
    {
    <tr>
        <td>@i.Name</td>
        <td>@i.Age</td>
        <td>@i.Address</td>
        <td>@i.department.Name</td>
    </tr>
}
    }
</table>

}